<Window x:Class="Layouts.DockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts"
        mc:Ignorable="d"
        Title="DockWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Button DockPanel.Dock="Top">Top 1</Button>
            <Button DockPanel.Dock="Bottom">Buttom 1</Button>
            <Button DockPanel.Dock="Bottom">Buttom 2</Button>
            <Button DockPanel.Dock="Left">Left</Button>
            <Button DockPanel.Dock="Right">Right 1</Button>
            <Button DockPanel.Dock="Top">Top 2</Button>
            <Button DockPanel.Dock="Right">Right 2</Button>
            <Button DockPanel.Dock="Right">Center</Button>
        </DockPanel>
    </Grid>
</Window>
