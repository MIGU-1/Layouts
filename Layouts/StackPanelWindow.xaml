<Window x:Class="Layouts.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts"
        mc:Ignorable="d"
        Title="StackPanelWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Height="30" Orientation="Horizontal">
                <TextBlock Text="Field 1" Width="100" HorizontalAlignment="Left"/>
                <TextBox Width="200" HorizontalAlignment="Right"/>
            </StackPanel>
            <StackPanel Height="30" Orientation="Horizontal">
                <TextBlock Text="Field 2" Width="100" HorizontalAlignment="Left"/>
                <TextBox Width="200" HorizontalAlignment="Right"/>
            </StackPanel>
            <StackPanel Height="30" Orientation="Horizontal">
                <TextBlock Text="Field 2" Width="100" HorizontalAlignment="Left"/>
                <TextBox Width="200" HorizontalAlignment="Right"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
